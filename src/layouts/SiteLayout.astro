---
import Navbar from '../components/Navbar.astro';
export interface Props {
  title: string;
}
const { title }: Props = Astro.props;
const navItems = [
  {
    href: '/',
    title: 'home',
  },
  {
    href: '/ec2',
    title: 'EC2',
  },
];
---

<!doctype html>
<html
  lang="en"
  id="html"
  class="bg-slate-200 dark:bg-slate-800 text-slate-900 dark:text-white"
>
  <head>
    <title>{title}</title>
    <meta charset="utf-8" />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/favicon.svg"
    />
    <meta
      name="viewport"
      content="width=device-width"
    />
    <meta
      name="generator"
      content={Astro.generator}
    />
  </head>
  <body>
    <Navbar
      navItems={navItems}
      currentPage={Astro.url.pathname}
    />
    <div class="font-mono">
      <slot />
    </div>
  </body>
</html>
